{
	"name": "EasyProject tweaks",
	"version": "0.4",
	"description": "Contains CSS and JavaScripts to fix annoying bugs in EasyProject software.",
	"manifest_version": 2,

	"content_scripts": [
		{
			"matches": ["https://iinfo.easyproject.cz/*"],
			"css": [
				"markitup/skins/markitup/style.css",
				"styles.css",
				"markitup/sets/markdown/style.css"
			],
			"js": [
				"jquery.js",
				"markitup/jquery.markitup.js",
				"markitup/sets/markdown/set.js",
				"markdown/Markdown.Converter.js",
				"markdown/Markdown.Sanitizer.js",
				"scripts.js"
			]
		}
	],

	"web_accessible_resources": [
		"markitup/jquery.markitup.js",
		"markitup/templates/preview.html",
		"markitup/templates/preview.css",
		"markitup/skins/markitup/images/bg-editor-textile.png",
		"markitup/skins/markitup/images/bg-editor-bbcode.png",
		"markitup/skins/markitup/images/menu.png",
